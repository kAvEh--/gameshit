<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:keepScreenOn="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/q_header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/q_header_score_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/header_bg"
                android:padding="3dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onCoinClick" >

                    <ImageView
                        android:id="@+id/question_header_coins_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_coin" />

                    <TextView
                        android:id="@+id/question_header_coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/question_header_coins_ic"
                        android:textColor="@color/white"
                        android:textSize="22sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" >

                    <TextView
                        android:id="@+id/question_header_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/question_header_points"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_points" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:background="@color/white" >

                <RelativeLayout
                    android:id="@+id/q_tima_bar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:background="@color/ajori"
                    android:gravity="right" >
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/q_main_layout"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_below="@id/q_header"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/main_q_bg" />

            <ImageView
                android:id="@+id/q_main_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/q_main_question"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="20sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="190dp"
            android:layout_below="@id/q_header"
            android:layout_marginRight="4dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/q_main_layout" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/hint_bg" />

            <ImageButton
                android:id="@+id/q_bar_freez"
                android:layout_width="96dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:onClick="onFreezClick"
                android:scaleType="centerInside"
                android:src="@drawable/ic_freeze_on" />

            <ImageButton
                android:id="@+id/q_bar_next"
                android:layout_width="96dp"
                android:layout_height="80dp"
                android:layout_below="@id/q_bar_freez"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:onClick="onSkipClick"
                android:scaleType="centerInside"
                android:src="@drawable/ic_skip_on" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="190dp"
            android:layout_below="@id/q_header"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/q_main_layout" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/hint_bg" />

            <ImageButton
                android:id="@+id/q_bar_remove_choice"
                android:layout_width="96dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:onClick="onRemoveClick"
                android:scaleType="centerInside"
                android:src="@drawable/ic_remove_on" />

            <ImageButton
                android:id="@+id/q_bar_hint"
                android:layout_width="96dp"
                android:layout_height="80dp"
                android:layout_below="@id/q_bar_remove_choice"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:onClick="onHintClick"
                android:scaleType="centerInside"
                android:src="@drawable/ic_help_on" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/q_seprator"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_below="@id/q_header"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <Button
            android:id="@+id/q_c_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/q_main_layout"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/q_seprator"
            android:background="@drawable/ch_bg"
            android:minWidth="200dp"
            android:onClick="selectChoice" />

        <Button
            android:id="@+id/q_c_2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/q_main_layout"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/q_seprator"
            android:background="@drawable/ch_bg"
            android:minWidth="200dp"
            android:onClick="selectChoice" />

        <Button
            android:id="@+id/q_c_3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/q_c_1"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/q_seprator"
            android:background="@drawable/ch_bg"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/q_c_1"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/q_seprator"
            android:background="@drawable/ch_bg"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/q_c_3"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/q_seprator"
            android:background="@drawable/ch_bg"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/q_c_3"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/q_seprator"
            android:background="@drawable/ch_bg"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/q_c_5"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/q_seprator"
            android:background="@drawable/ch_bg"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/q_c_5"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/q_seprator"
            android:background="@drawable/ch_bg"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />
    </RelativeLayout>

</ScrollView>