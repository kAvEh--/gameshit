<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#851" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/q_header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#bbb" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#eee" >

                <ImageButton
                    android:id="@+id/q_bar_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_verified_user" />

                <ImageButton
                    android:id="@+id/q_bar_freez"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/q_bar_next"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_image_timer_off" />

                <ImageButton
                    android:id="@+id/q_bar_remove_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/q_bar_freez"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_content_backspace" />

                <ImageButton
                    android:id="@+id/q_bar_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/q_bar_remove_choice"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_help" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/q_tima_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#515" >
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/q_main_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@id/q_header"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/q_seprator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/q_header"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <Button
            android:id="@+id/q_c_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_main_image"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@id/q_seprator"
            android:background="#ccc"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_main_image"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/q_seprator"
            android:background="#ccc"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_c_1"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@id/q_seprator"
            android:background="#ccc"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_c_1"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/q_seprator"
            android:background="#ccc"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_c_3"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@id/q_seprator"
            android:background="#ccc"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_c_3"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/q_seprator"
            android:background="#ccc"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_c_5"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@id/q_seprator"
            android:background="#ccc"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <Button
            android:id="@+id/q_c_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q_c_5"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/q_seprator"
            android:background="#ccc"
            android:minWidth="200dp"
            android:onClick="selectChoice"
            android:padding="7dp" />

        <ImageView
            android:id="@+id/question_expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/q_header"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:visibility="invisible" />
    </RelativeLayout>

</ScrollView>